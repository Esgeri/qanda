<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-edit').html('<%= j message %>');
  <% end %>
<%  else %>
  $('.answer-edit').html('');
  $('.answer-<%= @answer.id %>').find('#answer_body').html('<%= j @answer.body %>');
  $('form#edit-answer-<%= @answer.id %>').hide();
  $('.answer-<%= @answer.id %>').find('.edit-answer-link').show();
<%  end %>
